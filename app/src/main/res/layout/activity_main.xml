<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6C745"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_server"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#C17676"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sendServerData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务器发送" />

            <EditText
                android:id="@+id/et_sendServerData"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:hint="发送服务器消息" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_client"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#88BED6"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sendClientData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户端发送" />

            <EditText
                android:id="@+id/et_sendClientData"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:hint="发送客户端消息" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>